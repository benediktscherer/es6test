{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,

    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es6",
    "es7",
    "dom"
  ]
}