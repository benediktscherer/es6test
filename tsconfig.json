{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "diagnostics": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "outDir": "./dist/js/"
  },
  "target": "ES5",
  "module": "ES6",
  "include": [
    "src/scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}